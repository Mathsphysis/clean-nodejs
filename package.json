{
  "name": "clean-nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:zerocoolbr/clean-nodejs.git",
  "author": "Marcos Santana <brmarcossantanabr@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch './src/**/*.ts' --exec 'ts-node' ./src/index.ts",
    "build": "rm -rf release && tsc -p tsconfig-build.json",
    "lint": "eslint --fix 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "test -- --watch -c jest-unit-config.js",
    "test:integration": "test -- --watch -c jest-integration-config.js",
    "test:staged": "test -- --findRelatedTests",
    "test:ci": "test -- --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.23.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
